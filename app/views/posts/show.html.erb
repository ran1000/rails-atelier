<%= render "shared/navbar" %>
<%= render "shared/categories" %>
<div class="show-content">
  <% if @post.photos %>
    <%= cl_image_tag @post.photos[0].key, width: 400, height: 300, crop: :fill, class: %i[show-img] %>
  <% end  %>
  <div class="show-floating-title">
    <h4><%= @post.title %></h4>
    <% if current_user %>
      <%= link_to "edit post", edit_post_path, class:"btn button-white" %>
    <% end %>
    <% if current_user %>
      <%= link_to "delete post", delete_post_path(@post), data:{turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn button-white" %>
    <% end %>
  </div>
</div>
